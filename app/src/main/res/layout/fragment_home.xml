        <TextView
            android:id="@+id/erasmus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/erasmus"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/digital_marketing_vydavatelia"/>

        <TextView
            android:id="@+id/erasmus_vydavatelia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/erasmus_vydavatelia"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/erasmus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/erasmus_vydavatelia"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>